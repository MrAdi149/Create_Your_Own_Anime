<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedCharacter">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSelectedLists"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintBottom_toBottomOf="@+id/rvSelectedLists"
        app:layout_constraintEnd_toStartOf="@+id/downloadButton"
        app:layout_constraintHorizontal_bias="0.037"
        app:layout_constraintStart_toStartOf="@id/rvSelectedLists" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/downloadButton"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_marginTop="-72dp"
        android:clickable="true"
        android:src="@drawable/baseline_download_24"
        app:flow_horizontalBias="0.037"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvSelectedLists" />


</androidx.constraintlayout.widget.ConstraintLayout>
